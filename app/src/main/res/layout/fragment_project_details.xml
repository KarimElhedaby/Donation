<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/projectdetailsTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Project Title"
            android:textSize="18sp" />

        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"

            android:layout_margin="2dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/projectDescriptionTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Project Description that's an example of project donation details " />

        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/projectdetailsDonateNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_donator"
            android:gravity="center"
            android:padding="8dp"
            android:text="22  Donator"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/colorAccent" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/projectDetailsRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />



    </LinearLayout>
</ScrollView>